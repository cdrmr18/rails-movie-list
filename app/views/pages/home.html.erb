<div class="d-flex min-vh-100">
  <section class="container w-50 bg-warning">
    <p>New movie lists</p>
    <% @lists.each do |list| %>
      <div class="card text-white border-0 my-3">
        <img src="https://images.unsplash.com/reserve/Af0sF2OS5S5gatqrKzVP_Silhoutte.jpg?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTZ8fHJvbWFuY2V8ZW58MHx8MHx8&auto=format&fit=crop&w=600&q=60" class="card-img" alt="<%= list.name %>">
        <div class="card-img-overlay">
          <h5 class="card-title text-center"><%= list.name %></h5>
        </div>
      </div>
    <% end %>
  </section>
  <section class="container">
    <div class="banner bg-secondary h-25">banner</div>
    <div class="content h-75 bg-info">Movies</div>
  </section>
</div>
