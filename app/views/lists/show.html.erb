<h1><%= @list.name %> List</h1>


<%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <h2><%= movie.title %></h2>
  <%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete } %>
<% end %>

<%= link_to 'Back to home', lists_path, class: 'btn btn-primary' %>
